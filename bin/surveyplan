#!/usr/bin/env python
"""
Plan the DESI survey
"""
from __future__ import print_function, division, absolute_import

import sys

import desisurvey.scripts.surveyplan


if __name__ == '__main__':
    try:
        args = desisurvey.scripts.surveyplan.parse()
        desisurvey.scripts.surveyplan.main(args)
    except RuntimeError as e: #Exception as e:
        print(e)
        sys.exit(-1)
